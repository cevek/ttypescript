{
  "name": "ttypescript",
  "bin": {
    "ttsc": "./bin/tsc",
    "ttsserver": "./bin/tsserver"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test.watch": "jest --watch"
  },
  "version": "1.0.9",
  "description": "Over TypeScript tool to use custom transformers in the tsconfig.json",
  "main": "lib/typescript.js",
  "files": [
    "*.map",
    "*.js",
    "README.md",
    "src",
    "bin",
    "lib"
  ],
  "author": "cevek",
  "repository": {
    "type": "git",
    "url": "https://github.com/cevek/ttypescript.git"
  },
  "license": "MIT",
  "dependencies": {
    "compare-versions": "^3.1.0",
    "resolve": "^1.7.1",
    "ts-node": "^6.0.2"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^9.6.1",
    "@types/resolve": "0.0.8",
    "jest": "^22.4.3",
    "ts-jest": "^22.4.5",
    "typescript": "^2.8.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true,
        "enableTsDiagnostics": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": ["**/__tests__/(*.)(spec|test).(ts|tsx|js)"],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
